# NeuroInsight Desktop - Environment Configuration Template
# Copy this file to .env and customize as needed

# Application
ENVIRONMENT=production
LOG_LEVEL=INFO

# Database
POSTGRES_USER=neuroinsight
POSTGRES_PASSWORD=neuroinsight_desktop
POSTGRES_DB=neuroinsight
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379

# MinIO (S3-compatible storage)
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_ENDPOINT=localhost:9000
MINIO_BUCKET=neuroinsight-data

# Processing
MAX_CONCURRENT_JOBS=2
PROCESSING_TIMEOUT=3600
FASTSURFER_CONTAINER=deepmi/fastsurfer:latest

# Data directories (will be set automatically)
NEUROINSIGHT_DATA_DIR=
UPLOADS_DIR=
OUTPUTS_DIR=
DB_PATH=

# GPU Settings
ENABLE_GPU=auto
# Options: auto (detect), force (require GPU), disable (CPU only)

# Retention
RETENTION_COMPLETED_DAYS=90
RETENTION_FAILED_DAYS=30
MAX_SCANS_RETAINED=100

# Auto-cleanup
AUTO_CLEANUP_ENABLED=true
AUTO_CLEANUP_SCHEDULE=0 2 * * * 
# Cron format: Run at 2 AM daily


