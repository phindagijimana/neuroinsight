# NeuroInsight Environment Configuration
# Copy this file to .env before starting: cp .env.example .env

# Database Configuration
POSTGRES_HOST=db
POSTGRES_PORT=5432
POSTGRES_USER=neuroinsight
POSTGRES_PASSWORD=neuroinsight_secure_password
POSTGRES_DB=neuroinsight

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0

# MinIO Object Storage Configuration
MINIO_ENDPOINT=minio:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=neuroinsight-data
MINIO_USE_SSL=false

# Application Configuration
ENVIRONMENT=production
LOG_LEVEL=INFO
API_HOST=0.0.0.0
API_PORT=8000
CORS_ORIGINS=http://localhost:3000

# Storage Configuration (use absolute paths inside container)
UPLOAD_DIR=/data/uploads
OUTPUT_DIR=/data/outputs
MAX_UPLOAD_SIZE=524288000

# Processing Configuration
PROCESSING_TIMEOUT=36000
MAX_CONCURRENT_JOBS=2

# Security (CHANGE THESE IN PRODUCTION)
SECRET_KEY=change-this-secret-key-in-production
API_KEY_ENABLED=false
