{
  "name": "neuroinsight-standalone",
  "productName": "NeuroInsight",
  "version": "1.3.14",
  "description": "Standalone desktop application for hippocampal asymmetry analysis",
  "main": "src/main.js",
  "author": {
    "name": "NeuroInsight Team",
    "email": "support@neuroinsight.app"
  },
  "license": "MIT",
  "homepage": "https://github.com/phindagijimana/neuroinsight",
  "private": true,
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "build:all": "electron-builder --win --mac --linux"
  },
  "dependencies": {
    "electron-log": "^5.0.1",
    "electron-store": "^8.1.0",
    "wait-on": "^7.2.0"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "electron-updater": "^6.1.7"
  },
  "build": {
    "appId": "com.neuroinsight.desktop",
    "productName": "NeuroInsight",
    "copyright": "Copyright Â© 2025 NeuroInsight",
    "publish": null,
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "src/**/*",
      "assets/**/*",
      "!**/*.map",
      "!**/.DS_Store"
    ],
    "extraResources": [
      {
        "from": "../frontend",
        "to": "frontend",
        "filter": ["**/*"]
      },
      {
        "from": "../dist/neuroinsight-backend",
        "to": "backend",
        "filter": ["**/*"]
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ],
      "icon": "build/icon.ico",
      "publisherName": "NeuroInsight",
      "requestedExecutionLevel": "asInvoker"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "build/icon.ico",
      "uninstallerIcon": "build/icon.ico",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "NeuroInsight"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        }
      ],
      "icon": "build/icon.icns",
      "category": "public.app-category.healthcare-fitness",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist"
    },
    "dmg": {
      "icon": "build/icon.icns",
      "iconSize": 100,
      "contents": [
        {
          "x": 380,
          "y": 280,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 110,
          "y": 280,
          "type": "file"
        }
      ],
      "window": {
        "width": 540,
        "height": 380
      }
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        }
      ],
      "icon": "build/icons",
      "category": "Science;MedicalSoftware;Education",
      "desktop": {
        "Name": "NeuroInsight",
        "Comment": "Hippocampal Asymmetry Analysis Tool",
        "Categories": "Science;MedicalSoftware;Education;Medical",
        "StartupWMClass": "NeuroInsight"
      },
      "maintainer": "NeuroInsight Team <support@neuroinsight.app>"
    },
    "deb": {
      "priority": "optional",
      "depends": ["libglib2.0-0", "libgtk-3-0", "libxss1", "libasound2", "libdrm2", "libxcomposite1", "libxdamage1", "libxrandr2", "libgbm1", "libxkbcommon0", "libatspi2.0-0"],
      "afterInstall": "scripts/postinst.sh",
      "afterRemove": "scripts/postrm.sh"
    },
    "rpm": {
      "depends": ["glib2", "gtk3", "libXScrnSaver", "alsa-lib", "libXcomposite", "libXdamage", "libXrandr", "libgbm", "libxkbcommon", "at-spi2-core"],
      "afterInstall": "scripts/postinst.sh",
      "afterRemove": "scripts/postrm.sh"
    },
    "flatpak": {
      "runtime": "org.freedesktop.Platform",
      "runtimeVersion": "23.08",
      "base": "org.electronjs.Electron2.BaseApp",
      "baseVersion": "23.08",
      "finishArgs": [
        "--share=ipc",
        "--socket=x11",
        "--socket=wayland",
        "--device=dri",
        "--share=network",
        "--filesystem=home:create",
        "--filesystem=xdg-documents:create",
        "--filesystem=xdg-download:create"
      ]
    }
  }
}

